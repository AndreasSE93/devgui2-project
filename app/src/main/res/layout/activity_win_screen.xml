<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="devgui2.devgui2_project.WinScreen">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Congratulations!"
            android:id="@+id/congratsText"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In {1} moves, spanning {3} seconds, you managed to fit all {2} pieces into the grid."
            android:id="@+id/statsText"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/congratsText"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statsText"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restart game"
                android:id="@+id/restartButton"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/statsText"
                android:layout_margin="10dp"
                android:onClick="restart"
                android:layout_weight="1"
                android:enabled="false"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to main menu"
                android:id="@+id/backButton"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/restartButton"
                android:layout_margin="10dp"
                android:onClick="menu"
                android:layout_weight="1"
                android:enabled="false"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
