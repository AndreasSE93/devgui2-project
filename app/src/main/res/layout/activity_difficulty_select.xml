<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainScreen"
                android:touchscreenBlocksFocus="true"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_difficulty_select"
        android:id="@+id/title"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/linearLayout">

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/easy_difficulty"
            android:id="@+id/easyButton"
            android:focusable="true"
            android:enabled="true"
            android:textSize="40sp"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:onClick="play"
            android:layout_weight="1"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/medium_difficulty"
            android:id="@+id/mediumButton"
            android:focusable="true"
            android:enabled="true"
            android:textSize="40sp"
            android:layout_above="@+id/hardButton"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/hard_difficulty"
            android:id="@+id/hardButton"
            android:focusable="true"
            android:enabled="true"
            android:textSize="40sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="0.5"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/custom_difficulty"
            android:id="@+id/customButton"
            android:focusable="true"
            android:enabled="true"
            android:textSize="40sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="custom"
            android:layout_weight="1"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_weight="0.5"/>
    </LinearLayout>

</RelativeLayout>
